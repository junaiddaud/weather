<!DOCTYPE html>
<html lang="en">
<head>
   {{>headerlinks}}
    
    <title>Weather</title>
</head>
<body>
  {{>navbar}}
           
           <div class="containter-fluid main_header">
            <div class="row">
                <div class="col-md-10 col-12 mx-auto">
                  <div class="main_content">
                      <form class="temp_form">
<input type="text" id="cityName" placeholder="Enter your City Name" autocomplete="off">
<input type="submit" value="search" id="submission">
                      </form>

                  </div>
                  <div class="temp_info">
                      <div class="top_layer">
                          <p class="day">Day</p>
                          <p class="today_date">Date</p>
                      </div>
                      <div class="main_layer">
                          <p id="city_name">City Name</p>
                          <div class="middle_layer">
                          <p id="temp"><span id="temp_val" class="span_text">0</span><sup>o</sup>C</p>
                          <p id="temp_status"><i class="fas fa-cloud" aria-hidden="true"></i></p>
                          </div>
                      </div>
                  </div>
         
       </div>

   </div>
  </div>
